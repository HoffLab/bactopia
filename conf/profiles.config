profiles {
    standard {
        includeConfig "conda.config"
    }

    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g) -v ${HOME}/.cache:/.cache -v ${HOME}/.config:/.config'
        includeConfig "docker.config"
    }

    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
        singularity.cacheDir = "${singularity_cache}"
        includeConfig "docker.config"
    }

    slurm {
        singularity.enabled = true
        singularity.autoMounts = true
        singularity.cacheDir = "${singularity_cache}"
        includeConfig "slurm.config"
        includeConfig "docker.config"
    }

    awsbatch {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
        includeConfig "aws.config"
        includeConfig "docker.config"
    }
}
